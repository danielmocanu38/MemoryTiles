<Page x:Class="MVP_Tema_1_Mocanu_Daniel_10LF212.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MVP_Tema_1_Mocanu_Daniel_10LF212"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuPage">

    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Name="NewGame" Content="New Game" Width="150" Height="40" Margin="10" Click="NewGame_Click"/>
            <Button Name="OpenGame" Content="Open Game" Width="150" Height="40" Margin="10" Click="OpenGame_Click"/>
            <Button Name="SaveGame" Content="Save Game" Width="150" Height="40" Margin="10" Click="SaveGame_Click"/>
            <Button Name="Statistics" Content="Statistics" Width="150" Height="40" Margin="10" Click="Statistics_Click"/>
            <Button Name="Exit" Content="Exit" Width="150" Height="40" Margin="10" Click="Exit_Click"/>
        </StackPanel>
    </Grid>
</Page>
